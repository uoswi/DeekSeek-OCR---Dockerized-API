FROM runpod/pytorch:2.1.1-py3.10-cuda12.1.1-devel-ubuntu22.04

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages
# Official DeepSeek-OCR requirements (tested on Python 3.12.9 + CUDA 11.8 + PyTorch 2.6.0)
# We use PyTorch 2.1.1 from base image which should be compatible
RUN pip install --no-cache-dir \
    runpod \
    "transformers==4.46.3" \
    "tokenizers==0.20.3" \
    einops \
    addict \
    easydict \
    accelerate \
    sentencepiece \
    protobuf \
    Pillow \
    requests \
    huggingface_hub \
    PyMuPDF

# Install flash-attn for optimal performance
# Model uses flash_attention_2 implementation
RUN pip install --no-cache-dir flash-attn==2.7.3 --no-build-isolation

# Clone DeepSeek-OCR repository
RUN git clone https://github.com/deepseek-ai/DeepSeek-OCR.git /app/DeepSeek-OCR

# Download model weights at build time
RUN mkdir -p /app/models && \
    huggingface-cli download deepseek-ai/DeepSeek-OCR \
    --local-dir /app/models/DeepSeek-OCR

# Copy handler script
COPY runpod_handler.py /app/runpod_handler.py

# Set environment variables
ENV MODEL_PATH=/app/models/DeepSeek-OCR
ENV PYTHONPATH=/app/DeepSeek-OCR:$PYTHONPATH

# Start the handler directly
CMD ["python", "-u", "/app/runpod_handler.py"]
