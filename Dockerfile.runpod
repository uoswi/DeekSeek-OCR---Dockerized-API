FROM runpod/pytorch:2.1.1-py3.10-cuda12.1.1-devel-ubuntu22.04

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages
# Note: torch 2.1.1 is already in base image, no need to reinstall
# transformers <4.37.0 is required for PyTorch 2.1.1 compatibility
# (4.37+ requires PyTorch 2.4+ due to _pytree API changes)
# tokenizers 0.15.2 is compatible with transformers 4.36.x
RUN pip install --no-cache-dir \
    runpod \
    "transformers>=4.30.0,<4.37.0" \
    "tokenizers==0.15.2" \
    accelerate \
    sentencepiece \
    protobuf \
    Pillow \
    requests \
    huggingface_hub \
    PyMuPDF

# Clone DeepSeek-OCR repository
RUN git clone https://github.com/deepseek-ai/DeepSeek-OCR.git /app/DeepSeek-OCR

# Download model weights at build time
RUN mkdir -p /app/models && \
    huggingface-cli download deepseek-ai/DeepSeek-OCR \
    --local-dir /app/models/DeepSeek-OCR

# Copy handler script
COPY runpod_handler.py /app/runpod_handler.py

# Set environment variables
ENV MODEL_PATH=/app/models/DeepSeek-OCR
ENV PYTHONPATH=/app/DeepSeek-OCR:$PYTHONPATH

# Start the handler directly
CMD ["python", "-u", "/app/runpod_handler.py"]
